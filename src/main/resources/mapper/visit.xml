<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.metacoding.firstapp.domain.visit.VisitDao">

	<select id="findById"
		resultType="site.metacoding.firstapp.domain.visit.Visit">
		SELECT * FROM visit WHERE visit_id=#{visitId}
	</select>

	<select id="findAll"
		resultType="site.metacoding.firstapp.domain.visit.Visit">
		SELECT *
		FROM visit 
		WHERE visit_id=#{visitId}
	</select>

	<insert id="insert">
		INSERT
		INTO visit(post_id, user_id)
		VALUES(#{postId}, #{userId})
	</insert>

    <update id="update">
          UPDATE visit
		  SET post_id = #{postId},
		  user_id = #{userId}
    </update>

	<delete id="delete">
		DELETE FROM visit WHERE visit_id = #{visitId}
	</delete>

	<select id="findByUserIdAndPostId" resultType="Integer">
        SELECT visit_id
    	FROM visit
    	WHERE user_id = #{userId} and post_id = #{postId}
    </select>

	<insert id="save">
        INSERT
		INTO visit(user_id, post_id)
		VALUES(#{userId},#{postId})
    </insert>
	
	<select id="findVisitList" resultType="site.metacoding.firstapp.web.dto.response.visit.PostRespDto">
        SELECT p.post_id, p.post_title, p.post_content, p.post_thumnail, p.user_id, u.username, u.nickname, 
		u.	profile_img
		FROM post p
		INNER JOIN visit v
		ON p.post_id = v.post_id
		INNER JOIN user u 
		ON v.user_id = u.user_id
		WHERE v.user_id=#{userId}
		ORDER BY p.post_id DESC
    </select>

</mapper>