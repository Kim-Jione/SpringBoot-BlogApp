<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.metacoding.firstapp.domain.love.LoveDao">

	<select id="findById"
		resultType="site.metacoding.firstapp.domain.visit.Visit">
		SELECT * FROM visit WHERE visit_id=#{visitId}
	</select>

	<select id="findAll"
		resultType="site.metacoding.firstapp.domain.visit.Visit">
		SELECT *
		FROM visit 
		WHERE visit_id=#{visitId}
	</select>

	<insert id="insert" useGeneratedKeys="true" keyProperty="visitId">
		INSERT
		INTO visit(post_id, user_id)
		VALUES(#{postId}, #{userId})
	</insert>

    <update id="update">
          UPDATE visit
		  SET post_id = #{postId},
		  user_id = #{userId}
    </update>

	<delete id="delete">
		DELETE FROM visit WHERE visit_id = #{visitId}
	</delete>

</mapper>