<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.metacoding.firstapp.domain.love.LoveDao">

	<select id="findById"
		resultType="site.metacoding.firstapp.domain.love.Love">
		SELECT * FROM love WHERE love_id=#{loveId}
	</select>

	<select id="findAll"
		resultType="site.metacoding.firstapp.domain.love.Love">
		SELECT *
		FROM love 
		WHERE love_id=#{loveId}
	</select>

	<insert id="insert" useGeneratedKeys="true" keyProperty="loveId">
		INSERT
		INTO love(post_id, user_id)
		VALUES(#{postId}, #{userId})
	</insert>

    <update id="update">
          UPDATE love
		  SET post_id = #{postId},
		  user_id = #{userId}
    </update>

	<delete id="delete">
		DELETE FROM love WHERE love_id = #{loveId}
	</delete>

	 <select id="findByUserIdAndPostId" resultType="Integer">
        SELECT love_id
    	FROM love
    	WHERE user_id = #{userId} and post_id = #{postId}
    </select>

	<select id="findPostList" resultType="site.metacoding.firstapp.web.dto.response.love.PostRespDto">
        SELECT l.love_id, l.user_id, l.post_id, p.post_title, p.post_content, p.post_thumnail, p.user_id, u.nickname, u.profile_img, p.updated_at
		FROM (SELECT * FROM love WHERE user_id=#{userId}) l
		INNER JOIN post p
		ON l.post_id = p.post_id
		INNER JOIN user u
		ON p.user_id=u.user_id
		ORDER BY l.love_id DESC
    </select>

</mapper>